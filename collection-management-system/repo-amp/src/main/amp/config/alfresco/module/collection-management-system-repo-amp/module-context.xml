		<property name="nodeService" ref="NodeService" />
		<property name="utils" ref="ucm.nodeUtils" />
	</bean>

	<bean id="ucm.inheritPropertiesTargetAspect" class="org.alfresco.museum.ucm.aspects.UCMInheritPropertiesTargetAspect" init-method="init">
		<property name="policyComponent" ref="policyComponent" />
		<property name="nodeService" ref="NodeService" />
		<property name="utils" ref="ucm.nodeUtils" />
	</bean>

	<!-- Copy of /alfresco/subsystems/thirdparty/default/imagemagick-transform-context.xml -->

	<bean id="ucm.transformer.worker.ImageMagick" class="org.alfresco.repo.content.transform.magick.ImageMagickContentTransformerWorker">
		<property name="mimetypeService">
			<ref bean="mimetypeService" />
		</property>
		<property name="executer">
			<bean name="ucm.transformer.ImageMagick.Command" class="org.alfresco.util.exec.RuntimeExec">
				<property name="commandsAndArguments">
					<map>
						<entry key=".*">
							<list>
								<value>${img.exe}</value>
								<value>${source}</value>
								<value>SPLIT:${options}</value>
								<value>${target}</value>
							</list>
						</entry>
					</map>
				</property>
				<property name="processProperties" ref="#{systemProperties['os.name'].contains('Windows') ? 'ucm.processPropertiesWindows' : 'ucm.processPropertiesUnix'}" />
				<property name="defaultProperties">
					<props>
						<prop key="options"></prop>
					</props>
				</property>
				<property name="errorCodes">
					<!-- The published error and fatal error codes are in the 400 and 700 ranges, but 1 is the most common and have seen 255 (could that by
						-1) -->
					<value>1,2,255,400,405,410,415,420,425,430,435,440,450,455,460,465,470,475,480,485,490,495,499,700,705,710,715,720,725,730,735,740,750,755,760,765,770,775,780,785,790,795,799</value>
				</property>
			</bean>
		</property>
		<property name="checkCommand">
			<bean name="ucm.transformer.ImageMagick.CheckCommand" class="org.alfresco.util.exec.RuntimeExec">
				<property name="commandsAndArguments">
					<map>
						<entry key=".*">
							<list>
								<value>${img.exe}</value>
								<value>-version</value>
							</list>
						</entry>
					</map>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="ucm.processPropertiesWindows" class="org.springframework.beans.factory.config.MapFactoryBean">
		<property name="sourceMap">
			<map>
				<entry key="MAGICK_HOME">
					<value>${img.root}</value>
				</entry>
				<entry key="MAGICK_CODER_MODULE_PATH">
					<value>${img.coders}</value>
				</entry>
				<entry key="MAGICK_CONFIGURE_PATH">
					<value>${img.config}</value>
				</entry>
				<entry key="GS_LIB">
					<value>${img.gslib}</value>
				</entry>
				<entry key="DYLD_FALLBACK_LIBRARY_PATH">
					<value>${img.dyn}</value>
				</entry>
				<entry key="LD_LIBRARY_PATH">
					<value>${img.dyn}</value>
				</entry>
			</map>
		</property>
	</bean>

	<bean id="ucm.processPropertiesUnix" class="org.springframework.beans.factory.config.MapFactoryBean">
		<property name="sourceMap">
			<map>
				<entry key="MAGICK_HOME">
					<value>${img.root}</value>
				</entry>
